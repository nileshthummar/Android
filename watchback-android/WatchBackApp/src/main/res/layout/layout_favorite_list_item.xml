<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_iv_channel_icon"
            android:layout_width="@dimen/home_video_list_small_item_height"
            android:layout_height="@dimen/home_video_list_small_item_height"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="2.9dp" />

        <TextView
            android:id="@+id/id_tv_channel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14.6sp"
            android:textAppearance="@style/TextAppearance_BrandonMedium"
            app:layout_constraintLeft_toLeftOf="@+id/id_iv_channel_icon"
            app:layout_constraintRight_toRightOf="@+id/id_iv_channel_icon"
            app:layout_constraintTop_toBottomOf="@+id/id_iv_channel_icon"
            tools:text="channel name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
